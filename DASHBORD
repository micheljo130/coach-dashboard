    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // --- GESTION DU MENU MOBILE ---
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mainMenu = document.getElementById('main-menu');
            const mainNav = document.getElementById('main-nav');

            if (mobileMenuToggle && mainNav && mainMenu) {
                mobileMenuToggle.addEventListener('click', function() {
                    mainNav.classList.toggle('nav--mobile-open');
                    mainMenu.classList.toggle('menu--open'); 
                });

                mainNav.querySelectorAll('.nav__link').forEach(link => {
                    link.addEventListener('click', () => {
                        mainNav.classList.remove('nav--mobile-open');
                        mainMenu.classList.remove('menu--open');
                    });
                });
            }

            // --- DONNÉES DYNAMIQUES (Simulation d'une base de données) ---
            let objectifs = [
                { title: "Développer une application mobile", progress: 60 },
                { title: "Maîtriser Python pour la science des données", progress: 30 },
                { title: "Écrire un article de blog par semaine", progress: 80 }
            ];

            let taches = [
                "Revoir les concepts de POO en Python (Demain)",
                "Commencer le projet 'Liste de Tâches' (Lundi)",
                "Lire l'article sur la 'mémoire spatiale' (Ce week-end)"
            ];
            
            let progresRecents = `
                <p><strong>Hier :</strong> Terminé le module 3 de "Développement Web Fullstack".</p>
                <p><strong>Cette semaine :</strong> 5 heures de code, 2 chapitres lus sur la psychologie de l'apprentissage.</p>
            `;

            // --- SÉLECTEURS D'ÉLÉMENTS ---
            const objectifsList = document.getElementById('objectifs-list');
            const tasksList = document.getElementById('tasks-list');
            const recentProgressContent = document.getElementById('recent-progress-content');
            const newTaskInput = document.getElementById('new-task-input');
            const addTaskButton = document.getElementById('add-task-button');


            // --- FONCTIONS POUR AFFICHER LES DONNÉES ---
            function afficherObjectifs() {
                if (!objectifsList) return;
                objectifsList.innerHTML = ''; // Vider la liste
                objectifs.forEach(obj => {
                    const listItem = document.createElement('li');
                    listItem.innerHTML = `
                        <b>${obj.title}:</b> ${obj.progress}% complété
                        <div class="progress-bar">
                            <div class="progress-bar__fill" style="width: ${obj.progress}%;"></div>
                        </div>
                    `;
                    objectifsList.appendChild(listItem);
                });
            }

            function afficherTaches() {
                if (!tasksList) return;
                tasksList.innerHTML = ''; // Vider la liste
                taches.forEach(task => {
                    const listItem = document.createElement('li');
                    listItem.textContent = task;
                    tasksList.appendChild(listItem);
                });
            }
            
            function afficherProgres() {
                if (!recentProgressContent) return;
                recentProgressContent.innerHTML = progresRecents;
            }


            // --- GESTION DES ÉVÉNEMENTS ---
            function ajouterTache() {
                const taskText = newTaskInput.value.trim();
                if (taskText === "") {
                    alert("Veuillez entrer une description pour la tâche.");
                    return;
                }
                
                taches.push(taskText);
                afficherTaches();
                newTaskInput.value = '';
                newTaskInput.focus();
            }

            if(addTaskButton && newTaskInput) {
                addTaskButton.addEventListener('click', ajouterTache);

                newTaskInput.addEventListener('keypress', function(event) {
                    if (event.key === 'Enter') {
                        ajouterTache();
                    }
                });
            }

            // --- INITIALISATION DU TABLEAU DE BORD ---
            function initialiserDashboard() {
                afficherObjectifs();
                afficherTaches();
                afficherProgres();
            }
            
            initialiserDashboard();

        });
    </script>
</body>

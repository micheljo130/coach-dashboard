    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // JavaScript pour la navigation et les graphiques
        document.addEventListener('DOMContentLoaded', () => {
            const navLinks = document.querySelectorAll('.sidebar ul li a');
            const sections = document.querySelectorAll('.dashboard-section');

            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault(); // Empêche le rechargement de la page

                    // Supprime la classe 'active' de tous les liens et ajoute-la au lien cliqué
                    navLinks.forEach(nav => nav.classList.remove('active'));
                    e.target.classList.add('active');

                    // Cache toutes les sections et affiche celle qui correspond
                    sections.forEach(section => section.style.display = 'none');
                    const targetSectionId = e.target.dataset.section;
                    document.getElementById(targetSectionId).style.display = 'block';
                });
            });

            // Initialisation des graphiques (Chart.js)
            const strengthCtx = document.getElementById('strengthChart');
            if (strengthCtx) {
                new Chart(strengthCtx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                        datasets: [{
                            label: 'Force (kg)',
                            data: [60, 65, 70, 72, 75, 78],
                            borderColor: '#3498db',
                            backgroundColor: 'rgba(52, 152, 219, 0.2)',
                            tension: 0.3,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            title: {
                                display: true,
                                text: 'Progression de la Force au Soulevé de Terre'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }

            const weightCtx = document.getElementById('weightChart');
            if (weightCtx) {
                new Chart(weightCtx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                        datasets: [{
                            label: 'Poids (kg)',
                            data: [80, 79, 78, 77, 76, 75],
                            borderColor: '#e74c3c',
                            backgroundColor: 'rgba(231, 76, 60, 0.2)',
                            tension: 0.3,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            title: {
                                display: true,
                                text: 'Évolution du Poids Corporel'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: false // Le poids peut ne pas commencer à zéro
                            }
                        }
                    }
                });
            }
        });
    </script>
